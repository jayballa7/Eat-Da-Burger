<div class = "container-fluid padding">
  <div class = "row text-center">
      <div class = "col-12">
        <h1 class = "display-4">Eat Da Burger</h1>
      </div>
  </div>

  <div class = "row text-center">
    <div class = "col-12">
      <img src="/assets/img/burger-img.PNG" alt="burger-img" class="img-fluid">
    </div>
  </div>
  <hr>

{{!-- Add a burger input box and button --}}
  <div class = "row text-center">
    <div class = "offset-md-4 col-md-4">
      <div class="input-group mb-3 add-burger">
        <input type="text" class="form-control" id = "enter-burger" placeholder="Enter a burger" aria-label="Add a Burger" aria-describedby="add-a-burger">
          <div class="input-group-append">
            <button class="btn btn-success add-burger-btn" type="submit">Add Burger</button>
          </div>
      </div>
    </div>
  </div>

  <div class = "row text-center">
    <div class = "col-md-6">
      <div class = "card border-success">
        <div class = "card-body">
          {{!-- List of undevoured burgers and devour button --}}
          <h4 class = "card-title">Undevoured Burgers</h4>
            <ul class="list-group list-group-flush">
              <div class="input-group-append justify-content-center">
                {{#each burgers}}
                  {{#unless devoured}}
                    <li class="list-group-item">
                      <p class="display-burger">{{burger_name}}</p>
                      <button class="btn btn-success devour" type="submit" data-id="{{id}}">Devour</button>
                    </li>
                  {{/unless}}
                {{/each}}
              </div>
            </ul>
        </div> 
      </div>  
    </div>
    <div class = "col-md-6">
      <div class = "card border-success rounded">
        <div class = "card-body">
          {{!-- List of devoured burgers and trash button --}}
          <h4 class = "card-title">Devoured Burgers</h4>
            <ul class="list-group list-group-flush">
              <div class="input-group-append justify-content-center">
                {{#each burgers}}
                  {{#if devoured}}
                    <li class="list-group-item">
                      <p class="display-devoured">{{burger_name}}</p>
                      <button class="btn btn-danger trash-burger" type="submit" data-id="{{id}}">Trash</button>
                    </li>
                  {{/if}}
                {{/each}}
              </div>
            </ul>
        </div> 
      </div>  
    </div>
  </div>

</div>